{
    "name": "properties",
    "version": "1.0.0",
    "main": "server/server.ts",
    "repository": "git@github.com:neville-lodgify/properties.git",
    "author": "Neville Gallimore <neville@lodgify.com>",
    "license": "MIT",
    "dependencies": {
        "body-parser": "^1.19.0",
        "casual": "^1.6.2",
        "dotenv": "^8.0.0",
        "express": "^4.17.1",
        "prop-types": "^15.7.2",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-redux": "^7.1.0",
        "react-router-dom": "^5.0.1",
        "redux": "^4.0.4",
        "redux-thunk": "^2.3.0",
        "shortid": "^2.2.14"
    },
    "devDependencies": {
        "@babel/core": "^7.5.4",
        "@babel/plugin-proposal-class-properties": "^7.5.0",
        "@babel/plugin-transform-runtime": "^7.5.0",
        "@babel/preset-env": "^7.5.4",
        "@babel/preset-react": "^7.0.0",
        "@types/body-parser": "^1.17.0",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.0",
        "@types/node": "^12.6.2",
        "@types/shortid": "^0.0.29",
        "babel-loader": "^8.0.6",
        "concurrently": "^4.1.1",
        "node-sass": "^4.12.0",
        "redux-devtools": "^3.5.0",
        "ts-node": "^8.3.0",
        "ts-node-dev": "^1.0.0-pre.40",
        "typescript": "^3.5.3",
        "webpack": "^4.35.3",
        "webpack-cli": "^3.3.6"
    },
    "scripts": {
        "build": "yarn run build:scripts && yarn run build:styles",
        "build:scripts": "webpack --config ./webpack.config.js",
        "build:styles": "node-sass ./client/styles/main.scss ./build/css/main.css --source-map true",
        "dev": "concurrently \"yarn run watch:server\" \"yarn run watch:scripts\" \"yarn run watch:styles\"",
        "start": "yarn run build && yarn run start:server",
        "start:server": "ts-node server/server.ts",
        "watch:server": "ts-node-dev server/server.ts",
        "watch:scripts": "yarn run build:scripts --watch",
        "watch:styles": "yarn run build:styles && yarn run build:styles --watch"
    }
}
